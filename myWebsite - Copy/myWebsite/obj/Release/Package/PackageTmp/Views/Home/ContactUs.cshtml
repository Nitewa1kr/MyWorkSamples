
@{
    Layout = "~/Views/Shared/_layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>SiteContents</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/scripts/validations.js"></script>
</head>
<body>
    <div class="container" style="margin-top:15px;">
        <div class="well" >
            <h3>This is a Contact Us page:</h3>
        </div>
        <div class="container col-sm-12">
            <div class="form-control" style="height:auto; width:310px">
                <form name="form1" onsubmit="return false">
                    <div class="input-group">
                        <span class="input-group-addon">User Name</span>
                        <input type="text" name="user" class="form-control" placeholder="Username" aria-describedby="Name" onblur="user_isValid()" style="width:175px;">
                    </div>

                    <div class="input-group">
                        <span class="input-group-addon">Phone number</span>
                        <input type="text" name="area" class="form-control" placeholder="" aria-describedby="area" onblur="area_isValid()" style="width:50px;">
                        <input type="text" name="three" class="form-control" placeholder="" aria-describedby="three" onblur="three_isValid()" style="width:50px;">
                        <input type="text" name="four" class="form-control" placeholder="" aria-describedby="four" onblur="four_isValid()" style="width:60px;">
                    </div>

                    <div class="input-group">
                        <span class="input-group-addon">Email</span>
                        <input type="text" class="form-control" placeholder="Jon@doe.example" aria-describedby="basic-addon1" name="email" onblur="email_isValid()" style="width:200px;">
                    </div>
                    <br />
                    <div class="btn btn-block btn-info" name="myBtn" onclick="display()">SUBMIT</div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/scripts/jquery-1.10.2.min.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
</body>

</html>

